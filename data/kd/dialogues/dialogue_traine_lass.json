{
  "initializationAction": [
    "c.npc.set_chatting();"
  ],
  "escapeAction": "q.dialogue.close();",
  "speakers": {
    "trainer": {
      "name": {
        "type": "expression",
        "expression": "q.npc.name"
      },
      "face": "q.npc.face();",
      "gibber": {
        "step": 3,
        "interval": 0.08
      }
    }
  },
  "pages": [
    {
      "id": "main",
      "speaker": "trainer",
      "lines": [
        "Mes Pokémon sont trop mignons, n'est-ce pas ?",
        "Mais ne te fie pas aux apparences !",
        "Ils sont aussi très forts !"
      ],
      "input": {
        "type": "option",
        "vertical": true,
        "options": [
          {
            "text": "§aProuve-le moi !",
            "value": "battle",
            "action": [
              "q.dialogue.close();",
              "q.player.start_battle(q.npc);"
            ]
          },
          {
            "text": "§cIls sont effectivement mignons !",
            "value": "no",
            "action": "q.dialogue.set_page('goodbye');"
          }
        ]
      }
    },
    {
      "id": "goodbye",
      "speaker": "trainer",
      "lines": ["Héhé, merci ! À la prochaine !"],
      "input": {
        "type": "auto-continue",
        "delay": 2,
        "allowSkip": true,
        "action": "q.dialogue.close();"
      }
    }
  ]
}