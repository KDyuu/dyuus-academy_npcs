{
  "initializationAction": [
    "c.npc.set_chatting();"
  ],
  "escapeAction": "q.dialogue.close();",
  "speakers": {
    "trainer": {
      "name": {
        "type": "expression",
        "expression": "q.npc.name"
      },
      "face": "q.npc.face();",
      "gibber": {
        "step": 4,
        "interval": 0.1
      }
    }
  },
  "pages": [
    {
      "id": "main",
      "speaker": "trainer",
      "lines": [
        "... Je t'attendais.",
        "Mes pouvoirs psychiques m'ont révélé ta venue.",
        "Je vois aussi... une défaite dans ton futur proche."
      ],
      "input": {
        "type": "option",
        "vertical": true,
        "options": [
          {
            "text": "§aOn va voir ça !",
            "value": "battle",
            "action": [
              "q.dialogue.close();",
              "q.player.start_battle(q.npc);"
            ]
          },
          {
            "text": "§c...Vous me faites peur",
            "value": "no",
            "action": "q.dialogue.set_page('goodbye');"
          }
        ]
      }
    },
    {
      "id": "goodbye",
      "speaker": "trainer",
      "lines": ["Je savais que tu dirais ça..."],
      "input": {
        "type": "auto-continue",
        "delay": 2,
        "allowSkip": true,
        "action": "q.dialogue.close();"
      }
    }
  ]
}