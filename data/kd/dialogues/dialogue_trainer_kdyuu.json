{
  "initializationAction": ["c.npc.set_chatting();"],
  "escapeAction": "q.dialogue.close();",
  
  "speakers": {
    "trainer": {
      "name": { "type": "expression", "expression": "q.npc.name" },
      "face": "q.npc.face();",
      "gibber": { "step": 3, "interval": 0.08 }
    }
  },
  
  "pages": [
    {
      "id": "main",
      "speaker": "trainer",
      "lines": [
        "Je suis un As de la Ligue Pokémon.",
        "Mon équipe est équilibrée et puissante.",
        "Seuls les meilleurs dresseurs me battent !"
      ],
      "input": {
        "type": "option",
        "vertical": true,
        "options": [
          {
            "text": "§aJe relève le défi !",
            "value": "battle",
            "action": [
              "q.dialogue.close();",
              "q.player.run_command('function kd:battle_kdyuu');"
            ]
          },
          {
            "text": "§cJe ne suis pas prêt",
            "value": "no",
            "action": "q.dialogue.set_page('goodbye');"
          }
        ]
      }
    },
    {
      "id": "goodbye",
      "speaker": "trainer",
      "lines": ["Sage décision. Reviens quand tu seras à la hauteur."],
      "input": {
        "type": "auto-continue",
        "delay": 2,
        "allowSkip": true,
        "action": "q.dialogue.close();"
      }
    }
  ]
}
